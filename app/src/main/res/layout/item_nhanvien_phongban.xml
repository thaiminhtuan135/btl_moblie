<!--                android:layout_height="wrap_content"-->
<!--                android:layout_marginRight="10dp"-->
<!--                android:layout_marginLeft="10dp"-->
<!--                android:textSize="10dp"-->
<!--                android:text="Xóa" />-->
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
